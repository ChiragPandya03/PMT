@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<body>
    <section class="coursePage">
        @Html.HiddenFor(s=>Model.SubLevelSearchID)
        <div class="mainBanner sectionarea" id="homeSection">

            @*<div class="wrapper">
            <div class="courseOverview">
                <h1>Courses</h1>
            </div>
            <h6> No. of program - @Model.TotalProgramCount</h6>
            <h6> No. of languages - @Model.TotalLanguageCount</h6>
            <h6> No. of Trainers - @Model.TotalTrainerCount</h6>
        </div>*@

            <div class="flexslider">
                <ul class="slides">
                    <li>
                        <div class="firstSlide">
                            <div class="courseOverview">
                                <div class="wrapper">
                                    <h1>Easy Access<br> To Experts</h1>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="secoundSlide">
                            <div class="courseOverview">
                                <div class="">
                                    <h1>Transformation <br>Through<br> IL&D Webinar</h1>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>

        <div class="courseSection sectionarea sectionUp" id="courseSection">
            <div class="wrapper">
                @*<h1>Course</h1>*@
                <div class="courseListWrapper">
                    <ul class="courseList list-unstyled">
                        @foreach (var item in Model.Programs)
                        {
                            <li>
                                <a class="" asp-area="" asp-page="/Programs/Index" asp-route-id="@item.ProgramId">


                                    @if (item.Name == "Leadership Skills")
                                    {
                                        <img src="../img/Leadership.png" width="60" class="iconOne">
                                        <img src="../img/Leadership_white.png" width="60" class="iconTwo">
                                    }
                                    else if (item.Name == "Customer Service")
                                    {
                                        <img src="../img/Costomer.png" width="60" class="iconOne">
                                        <img src="../img/Costomer_white.png" width="60" class="iconTwo">
                                    }
                                    else if (item.Name == "Presentation Skills")
                                    {
                                        <span class="icon icon-PresentationSkills"><span class="path1"></span><span class="path2"></span><span class="path3"></span><span class="path4"></span><span class="path5"></span><span class="path6"></span><span class="path7"></span><span class="path8"></span><span class="path9"></span><span class="path10"></span><span class="path11"></span><span class="path12"></span><span class="path13"></span><span class="path14"></span><span class="path15"></span></span>
                                    }
                                    else if (item.Name == "Personal Effectiveness")
                                    {
                                        <img src="../img/Personal-effect.png" width="60" class="iconOne">
                                        <img src="../img/Personal-effect_white.png" width="60" class="iconTwo">
                                    }
                                    else if (item.Name == "Impactful L&D for Trainers")
                                    {
                                        <img src="../img/Trainer.png" width="60" class="iconOne">
                                        <img src="../img/Trainer_white.png" width="60" class="iconTwo">
                                    }
                                    else if (item.Name == "Human Resource")
                                    {
                                        <img src="../img/HR.png" width="60" class="iconOne">
                                        <img src="../img/HR_white.png" width="60" class="iconTwo">
                                    }
                                    else
                                    {
                                    <span class="@item.CssClass"></span>
                                    }

                                    <span> @Html.DisplayFor(m => item.Name)</span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </section>
</body>


